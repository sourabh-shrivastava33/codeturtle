{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Next.js Router (Turbopack)",
      "type": "node",
      "request": "attach",
      "port": 9230,
      "protocol": "inspector",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/.next/**/*.js"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
