generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(cuid())
  clerkId     String        @unique
  email       String        @unique
  firstName   String?
  lastName    String?
  phone       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  githubCreds GithubCreds[]

  @@map("users")
}

model GithubCreds {
  id     String @id @default(cuid())
  userId String
    status Boolean @default(true)
  access_token String
  user_name String
  email String
  user   User   @relation(fields: [userId], references: [id])
  repositories Repositories[]
}

model Repositories{
  id String @id @default(cuid())
  githubId String
  name String
ownerName String
fullName String
isPrivate Boolean @default(false)
autoReviewEnabled Boolean @default(false)
webhookId String?
webhookSecret String?
defaultBranch String
htmlUrl String
cloneUrl String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  lastSyncedAt DateTime?      
  lastPrAt DateTime?

  github GithubCreds @relation(fields: [githubId],references: [id])
}